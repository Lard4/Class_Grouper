<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView android:id="@+id/number_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/textColorPrimary"
        android:text="Number of groups:"/>

    <biz.kasual.materialnumberpicker.MaterialNumberPicker android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_groups"
        app:npMinValue="2"
        app:npMaxValue="50"
        app:npDefaultValue="2"
        app:npSeparatorColor="@color/colorAccent"
        app:npTextColor="@color/textColorPrimary"
        app:npTextSize="20sp"/>

</RelativeLayout>