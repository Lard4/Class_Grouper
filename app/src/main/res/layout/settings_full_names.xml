<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/settings_full_names"
    android:layout_width="match_parent"
    android:layout_height="@dimen/three_line_switch_height"
    android:layout_marginTop="12dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:clickable="true"
    android:foreground="@drawable/custom_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:theme="@style/SwitchLineOne"
            android:text="Use full names"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line1"
            android:layout_marginTop="@dimen/settings_space_between_switch_lines"
            android:theme="@style/SwitchLineTwo"
            android:text="Use the student\'s full names in the class\nroster page."/>

    </RelativeLayout>

    <Switch android:id="@+id/settings_full_names_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>